.userList {
  display: flex;
  height: 200rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  overflow-x: scroll;
  overflow-y: hidden;
}
.userItem {
  flex-shrink: 0;
  width: 180rpx;
  font-size: 28rpx;
  position: relative;
}
.userItem .avatar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx auto;
  border-radius: 25px;
  border: solid 2rpx #f4f4f6;
}
.userItem .userName {
  position: absolute;
  top: 120rpx;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.userItem .userScore {
  position: absolute;
  top: 160rpx;
  right: 0;
  left: 0;
  font-size: 15px;
  display: flex;
  justify-content: center;
  font-weight: 600;
  color: #9e2d25;
}
.msgBox {
  background-color: #f6f6f6;
  border-top: solid 8rpx #f4f4f6;
  height: calc(100vh - 248rpx);
}
.msgBox .joinRoom,
.msgBox .reflashInfo {
  background-color: #cecece;
  font-size: 30rpx;
  color: white;
  width: -webkit-fit-content;
  width: fit-content;
  margin: 20rpx auto;
  padding: 0 10rpx;
  border-radius: 10rpx;
  text-align: center;
}
.msgBox .scoreInfo {
  background-color: white;
  height: 100rpx;
  line-height: 100rpx;
}
.msgBox .scoreInfo text {
  font-size: 28rpx;
  margin: 0 10rpx;
  font-weight: 600;
}
.msgBox .scoreInfo .payer,
.msgBox .scoreInfo .reciver {
  color: #5494bd;
}
.msgBox .scoreInfo .score {
  color: #9e2d25;
}
.msgBox .scoreInfo .dateTime {
  float: right;
  font-size: 28rpx;
  font-weight: 500;
  color: #b6b6b6;
}
.confirmBox {
  height: 500rpx;
  width: 600rpx;
  background-color: white;
  font-size: 30rpx;
}
.confirmBox .confirmBoxHead {
  margin: 40rpx auto;
  display: flex;
  padding: 20rpx 40rpx;
  text-align: center;
  font-weight: 600;
  color: #6db5ff;
}
.confirmBox .confirmBoxHead .info {
  flex: 2;
}
.confirmBox .confirmBoxHead .info image {
  width: 100rpx;
  height: 60rpx;
}
.confirmBox .confirmBoxHead .confirmBoxUserItem {
  flex: 1;
}
.confirmBox .confirmBoxHead .confirmBoxUserItem .avatar {
  margin: 10rpx, 0;
  border-radius: 25px;
  border: solid 2rpx #f4f4f6;
  width: 80rpx;
  height: 80rpx;
}
.confirmBox .inputBox {
  margin: 0 80rpx;
}
.confirmBox .confirmBtn {
  margin-left: 80rpx;
  margin-top: 40rpx;
  width: 74%;
}

